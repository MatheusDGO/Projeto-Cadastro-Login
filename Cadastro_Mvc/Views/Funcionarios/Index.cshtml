@model IEnumerable<Cadastro_Mvc.Funcionarios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>



<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Visão Geral</h3>
    <div class="row">
        <div class="col-md-12">
            <div class="content-panel" style="padding:20px">

                <p>
                    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-default" })
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sobrenome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Senha)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CPF)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Endereco)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Bairro)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UF)
                        </th>
                        
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sobrenome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Senha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CPF)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Endereco)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Bairro)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UF)
                            </td>
                            
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Func }) |
                                @Html.ActionLink("Detalhar", "Details", new { id = item.Id_Func }) |
                                @Html.ActionLink("Deletar", "Delete", new { id = item.Id_Func })
                            </td>
                        </tr>
                    }

                </table>

            </div>

        </div>
    </div>
   
</section>
